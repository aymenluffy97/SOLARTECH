<div class="container mt-5">
    <h1 class="text-center mb-5">Nos Ã‰quipements Solaires</h1>

    <div class="row">
        <% produits.forEach(produit => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="/images/<%= produit.imageNom %>" class="card-img-top" alt="<%= produit.nom %>" style="height: 200px; object-fit: cover;">
                    
                    <div class="card-body">
                        <span class="badge bg-primary mb-2"><%= produit.categorie %></span>
                        <h5 class="card-title"><%= produit.nom %></h5>
                        <p class="card-text text-muted"><%= produit.description %></p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <a href="/contact" class="btn btn-outline-warning w-100">Demander un devis</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
